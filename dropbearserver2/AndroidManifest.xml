<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    android:versionCode="200"
    android:versionName="2.0.0"
    package="me.shkschneider.dropbearserver2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:description="@null"
        android:name="me.shkschneider.dropbearserver2.START_SERVER"
        android:protectionLevel="dangerous" />
    <permission
        android:description="@null"
        android:name="me.shkschneider.dropbearserver2.SERVER_STARTED"
        android:protectionLevel="dangerous" />
    <permission
        android:description="@null"
        android:name="me.shkschneider.dropbearserver2.STOP_SERVER"
        android:protectionLevel="dangerous" />
    <permission
        android:description="@null"
        android:name="me.shkschneider.dropbearserver2.SERVER_STOPPED"
        android:protectionLevel="dangerous" />

    <uses-feature
        android:name="android.hardware.screen.portrait"
        android:required="true" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".MainApplication"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MainService" />

        <receiver
            android:name=".MainReceiver"
            android:permission="me.shkschneider.dropbearserver.START_SERVER" >
            <intent-filter>
                <action android:name="me.shkschneider.dropbearserver.START_SERVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".MainReceiver"
            android:permission="me.shkschneider.dropbearserver.SERVER_STARTED" >
            <intent-filter>
                <action android:name="me.shkschneider.dropbearserver.SERVER_STARTED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".MainReceiver"
            android:permission="me.shkschneider.dropbearserver.STOP_SERVER" >
            <intent-filter>
                <action android:name="me.shkschneider.dropbearserver.STOP_SERVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".MainReceiver"
            android:permission="me.shkschneider.dropbearserver.SERVER_STOPPED" >
            <intent-filter>
                <action android:name="me.shkschneider.dropbearserver.SERVER_STOPPED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>